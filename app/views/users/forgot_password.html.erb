<div class ="inform">
  <h1>Request for reseting password</h1>
  <% form_for @user, :url => forgot_password_users_path do |f| %>
  <p>
    <%= f.label :user, "Email:" %>
    <%= f.text_field :email %>
  </p>
  <p>
    <%= submit_tag "Submit" %>
    or <%=link_to "Cancel", back_or_default %>
  </p>
  <% end %>
</div>
